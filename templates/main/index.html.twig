{% extends "base.html.twig" %}
{% block body %}    

    {# Featured Section #}
    <div class="mx-auto container mt-16">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">

            {% for fq in featuredQuestions %}
                <a href="{{ path('index.show', {id: fq.id}) }}" class="px-1 py-2 lg:py-0 w-full h-64 md:w-1/2 lg:px-4 lg:w-1/4">
                    <div class="flex flex-col justify-between grow-small hover:shadow-2xl p-5 bg-white rounded-lg shadow-lg h-full bg-center bg-cover bg-no-repeat" style="background-image: url({{ '/images/' ~ fq.image }})">
                        <h2 class="text-white font-bold text-lg tracking-wider">{{fq.title}}</h2>
                        <div class="flex item-center">
                            <img class="mr-3 w-6 h-6 rounded-full" src="{{ '/images/' ~ fq.author.image }}">
                            <p class="text-white text-xs mt-1">{{fq.author.name}}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}

            {# All Question section #}
            <div class="flex mt-16 container mx-auto">

                {# Left side #}
                <div class="w-2/3 pr-16">
                    
                    {# Heading container #}
                    <div class="flex items-center justify-between">
                        <div class="">
                            <h1 class="font-bold tracking-wide text-xl text-gray-900">Questions & Discussions</h1>
                            <p class="font-light text-sm leading-none mt-2 text-gray-600">View All {{questions|length}} questions</p>
                        </div>
                        <button class="grow-small mr-5 bg-askio-blue text-sm text-white py-2 px-4 rounded-full hover:shadow-lg focus:outline-none focus:shadow-outline" type="button">
                            Ask Something Interesting
                        </button>
                    </div>

                    {# Question container #}
                    {% for q in questions %}
                        <div  class="pt-8 flex items-center justify-between">

                            <!-- Single Question -->
                                <div class="flex items-center">
                                    <img class="mr-3 w-16 h-16 rounded-full" src="{{ '/images/' ~ q.author.image }}">   
                                    <div class="ml-6">
                                        <a href="{{ path('index.show', {id: q.id}) }}" class="font-bold cursor-pointer tracking-wide leading-none text-lg text-gray-900">{{q.title}}</a>
                                        <p class="font-light text-xs leading-none mt-2 text-gray-600"><a href="#" class="hover:text-askio-blue font-medium">{{q.author.name}}</a> 3 Hours ago <a class="hover:text-askio-blue" href="#">{{ q.likes }} likes</a></p>
                                    </div>                     
                                </div>
        
                            <!-- Answers Container -->
                          
                        </div>
                    {% endfor %}

                </div>

                {# Right side #}
                <div class="w-1/3 bg-blue-200 rounded-lg shadow-lg">

                </div>

            </div>

        </div>
    </div>

{% endblock body %}