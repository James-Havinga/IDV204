{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<div class="flex w-full z-40 bg-no-repeat bg-center md:bg-right-bottom" style="background-image: url(images/undraw.svg)">
    <div class="w-1/2 h-screen p-10 px-20 flex content-center flex-wrap">   
        {{ form_start(form, {'attr': {'class': 'w-full px-12 pt-6 pb-8 mb-4'}}) }}
            <h2 class="font-black tracking-wider text-2xl">Sign Up</h2>
            <p class="text-md">We promise there is no such thing as a dumb question...</p>

            <div class="flex flex-wrap -mx-3 my-6">
                <div class="w-full md:w-1/2 px-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>

                <div class="w-full md:w-1/2 px-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>

            <div class="mb-6">
                {{ form_widget(form.password) }}
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}







